@using System.Threading.Tasks
@using MasterApi.Core.Account.Events
@model PasswordChangedEvent

<h2 style="margin:0 0 20px 0;font-size:14px">Hello @Model.Account.Profile.FirstName @Model.Account.Profile.LastName !</h2>
<div>
    <p>
        Your @Model.AppInfo.Name password has been changed.
        <br/>
        Username: @Model.Account.Username
    </p>
    <p style="text-align:center">
        <a style="display:inline-block;line-height:1em;padding:10px 18px;background:-webkit-linear-gradient(top,#4387fd,#4683ea);color:#fff;border-radius:3px;vertical-align:baseline;text-decoration:none" href="@string.Format("{0}{1}",Model.Urls.Web, Model.Urls.LoginPage)" target="_blank">
            Login
        </a>
    </p>
    <p style="margin-top:20px">
        Best regards,
        <br />
        @Model.AppInfo.Name Team
    </p>
</div>

@section Footer
{
    <div>
        <p>
            <a href="@Model.Urls.Web" target="_blank">@Model.AppInfo.Name</a>
        </p>
        <p>
            @Model.AppInfo.Copyright - @Model.AppInfo.LicenseName
        </p>
    </div>
}